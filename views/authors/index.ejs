<h2>Search Authors by Name</h2>
<form action="/authors" method="GET">
  <label for="author-name">Name</label>
  <input type="text" id="author-name" name="author-name" />
  <button type="submit">Search</button>
</form>
<br />
<% authors.forEach((author) => { %>
<div><%= author.name %></div>
<% }) %>
