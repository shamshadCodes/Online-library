<!-- Title -->
<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= book.name %>" />
</div>

<!-- Author -->
<div>
  <label>Author</label>
  <select name="author">
    <% authors.forEach((author) => { %> <% if(author.id === book.author) { %>
    <option
      selected
      label="<%= author.name %>"
      value="<%= author.id %>"
    ></option>
    <% } else { %>
    <option label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } %> <% }) %>
  </select>
</div>

<!-- Publish Date -->
<div>
  <label>Publish Date</label>
  <input type="date" name="publish-date" value="<% book.publishDate == null ? ''
  : book.publishDate.toISOString().split('T')[0]%>"
</div>

<!-- Page Count -->
<div>
  <label>Page Count</label>
  <input type="page-count" name="page-count" value="<%= book.pageCount %>" />
</div>
